{
    "private": true,
    "engines": {
        "node": ">=18 <23",
        "npm": ">=8"
    },
    "scripts": {
        "build:js": "esbuild game/static/game/script.js --minify --target=es2018 --outfile=game/static/game/script.min.js",
        "build:online": "esbuild game/static/game/online.js --minify --target=es2018 --outfile=game/static/game/online.min.js",
        "build:ai": "esbuild game/static/game/ai.js --minify --target=es2018 --outfile=game/static/game/ai.min.js",
        "build:css": "esbuild game/static/game/style.css --minify --outfile=game/static/game/style.min.css",
        "build": "npm run build:js && npm run build:online && npm run build:ai && npm run build:css",
        "heroku-postbuild": "npm run build"
    },
    "dependencies": {
        "@stripe/stripe-js": "^7.2.0",
        "esbuild": "^0.23.0"
    }
}
